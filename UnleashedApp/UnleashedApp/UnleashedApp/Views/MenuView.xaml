<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.MenuView"
             xmlns:locator="clr-namespace:UnleashedApp"             
             BindingContext="{Binding Source={x:Static locator:ViewModelLocator.Instance}, Path=MenuViewModel}">
    <Grid Padding="10"  RowSpacing="5" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Text="Who Is Who" Grid.Row="0" Grid.Column="0" Command="{Binding WhoIsWhoCommand}" BackgroundColor="#e6332a" TextColor="#fff" />
        <Button Text="Floor Plan" Grid.Row="1" Grid.Column="0" Command="{Binding FloorplanCommand}" BackgroundColor="#e6332a" TextColor="#fff"/>

        <Button Text="Training" Grid.Row="2" Grid.Column="0" BackgroundColor="#e6332a" TextColor="#fff"/>
        <Button Text="Log Out" Grid.Row="3" Grid.Column="0" BackgroundColor="#e6332a" TextColor="#fff"/>
    </Grid>
</ContentPage>