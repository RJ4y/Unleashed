<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.MenuView"
             xmlns:locator="clr-namespace:UnleashedApp"             
             BindingContext="{Binding Source={x:Static locator:ViewModelLocator.Instance}, Path=MenuViewModel}">
    <Grid RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Button Text="Who Is Who" Grid.Row="0" Grid.Column="0" Command="{Binding WhoIsWhoCommand}" BackgroundColor="#e6332a"/>
        <Button Text="Floor Plan" Grid.Row="0" Grid.Column="1" Command="{Binding FloorplanCommand}" BackgroundColor="#e6332a"/>

        <Button Text="Training" Grid.Row="1" Grid.Column="0" BackgroundColor="#e6332a"/>
        <Button Text="Log Out" Grid.Row="1" Grid.Column="1" BackgroundColor="#e6332a"/>
    </Grid>
</ContentPage>