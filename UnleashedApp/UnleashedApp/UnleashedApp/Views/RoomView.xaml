<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.RoomView"
             xmlns:locator="clr-namespace:UnleashedApp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="LegendGrid">
            <!--Content is dynamically generated by CreateLegendGrid-->
        </Grid>
        <Grid Grid.Row="1" x:Name="RoomGrid" BackgroundColor="Wheat" RowSpacing="1" ColumnSpacing="1">
            <!--Content is dynamically generated by CreateRoomGrid-->
        </Grid>
    </Grid>
</ContentPage>