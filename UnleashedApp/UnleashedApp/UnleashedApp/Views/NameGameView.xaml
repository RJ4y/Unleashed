<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.NameGameView">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView x:Name="questionScrollView">
                <Grid ColumnSpacing="8" HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="120" />
                        <RowDefinition x:Name="rowDefinitionWrongOption" Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*" />                       
                    </Grid.ColumnDefinitions>
                    <Label HorizontalOptions="Center" Grid.Row="0" Text="Which name belongs to this person?" Margin="10,0"/>
                    <Image x:Name="employeeImage" Grid.Row="1" Source="placeholder.jpg" />
                    <Label x:Name="wrongOptionSelectedLabel" Grid.Row="2" Margin="10,0"/>
                    <Button x:Name="optionOneButton" Grid.Row="3"/>
                    <Button x:Name="optionTwoButton" Grid.Row="4"/>
                    <Button x:Name="optionThreeButton" Grid.Row="5"/>
                </Grid>
            </ScrollView>
            <ScrollView x:Name="correctAnswerScrollView" IsVisible="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Image x:Name="image" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Source="placeholder.jpg" HeightRequest="60" VerticalOptions="Center"/>
                    <Label x:Name="nameLabel" Grid.Row="1" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="3" FontAttributes="Bold" VerticalTextAlignment="End"/>
                    <Label x:Name="functionLabel"  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" FontAttributes="Italic" VerticalTextAlignment="Start" FontSize="12"/>
                    <Label x:Name="expectationsHeaderLabel"  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" Text="Expectations" />
                    <Label x:Name="expectationsLabel"  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4"  />
                    <Label x:Name="motivationHeaderLabel"  Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" Text="Motivation" />
                    <Label x:Name="motivationLabel"  Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" />
                    <Label x:Name="needToKnowHeaderLabel"  Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4" Text="Need to know" />
                    <Label x:Name="needToKnowLabel"  Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="4" />
                    <Label x:Name="birthDateHeaderLabel"  Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Text="Birth date" />
                    <Label x:Name="birthDateLabel"  Grid.Row="10" Grid.Column="3" Grid.ColumnSpan="2" />
                    <Button x:Name="guessAnotherButton" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="4" Text="Guess another"></Button>
                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

