<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.WhoIsWhoView"
             xmlns:locator="clr-namespace:UnleashedApp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>

        <Image Source="header.png" Aspect="AspectFill" Grid.Row="0" Grid.Column="0"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" Grid.Row="1" Grid.Column="0">
            <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                <Button Text="Habitat" BackgroundColor="White" TextColor="CornflowerBlue" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Fill">
                <Button Text="Squad" BackgroundColor="White" TextColor="CornflowerBlue" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                <SearchBar Placeholder="search"/>
            </StackLayout>
        </StackLayout>

        <ListView ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}" Grid.Row="2" Grid.Column="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding FullName}" Command="{ Binding EmployeeDetailCommand }"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>