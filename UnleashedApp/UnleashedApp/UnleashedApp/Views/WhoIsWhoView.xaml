<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.WhoIsWhoView"
             x:Name="WhoIsWho"
             xmlns:locator="clr-namespace:UnleashedApp">

    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
            <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                <Button Text="Habitat" Command="{ Binding HabitatCommand }" BackgroundColor="White" TextColor="CornflowerBlue" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Fill">
                <Button Text="Squad" Command="{ Binding SquadCommand }" BackgroundColor="White" TextColor="CornflowerBlue" FontAttributes="Bold"/>
            </StackLayout>
        </StackLayout>

        <ListView ItemsSource="{ Binding GroupedList }"
                  IsGroupingEnabled="True"
                  GroupDisplayBinding="{ Binding Name }"
                  GroupShortNameBinding="{Binding Name }"
                  SelectedItem="{ Binding SelectedEmployee, Mode=TwoWay }">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{ Binding FullName }" Command="{ Binding Source={x:Reference WhoIsWho}, Path=BindingContext.EmployeeDetailCommand }"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>