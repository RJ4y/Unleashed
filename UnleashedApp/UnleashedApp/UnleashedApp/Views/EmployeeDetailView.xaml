<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.EmployeeDetailView"
             xmlns:locator="clr-namespace:UnleashedApp">

    <StackLayout Orientation="Vertical">
        <Label Text="{ Binding Habitat.Name }" FontSize="Large" TextColor="#e6332a"/>
        <StackLayout Orientation="Horizontal">
            <Image Source="placeholder.jpg" HeightRequest="80"/>
            <Label Text="{ Binding FullName }" TextColor="Black" VerticalTextAlignment="Center"/>
        </StackLayout>

        <Label Text="{ Binding Function }" TextColor="Black"/>
    </StackLayout>
</ContentPage>