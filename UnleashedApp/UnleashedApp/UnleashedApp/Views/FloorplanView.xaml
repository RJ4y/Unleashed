<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.FloorplanView"
             xmlns:locator="clr-namespace:UnleashedApp"
             Padding="0">
    <ScrollView>
        <Grid x:Name="MainGrid" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" x:Name="LegendGrid" BackgroundColor="Gray">
                <!--Content is dynamically generated by CreateLegendGrid-->
            </Grid>
            <Grid Grid.Row="1" x:Name="FloorplanGrid" BackgroundColor="Wheat" RowSpacing=".5" ColumnSpacing=".5">
                <!--Content is dynamically generated by CreateFloorplanGrid-->
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>