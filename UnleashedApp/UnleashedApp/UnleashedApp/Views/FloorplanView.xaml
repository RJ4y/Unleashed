<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.FloorplanView"
             xmlns:locator="clr-namespace:UnleashedApp"
             Padding="0">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="About" Order="Secondary" Text="About" Priority="0" />
        <ToolbarItem Name="LogOut" Order="Secondary" Text="Log out" Priority="1" />
    </ContentPage.ToolbarItems>
    <ScrollView x:Name="scrollView" Padding="10">
        <Grid x:Name="mainGrid" RowSpacing="10" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button x:Name="legendButton" Grid.Row="0" Text="Open legend" Clicked="ChangeLegendVisibility" BackgroundColor="#e6332a" TextColor="#fff" />
            <Grid Grid.Row="1" x:Name="legendGrid" BackgroundColor="#eee" IsVisible="False" Margin="5">
                <!--Content is dynamically generated by LegendGridService-->
            </Grid>
            <Grid Grid.Row="2" x:Name="floorplanGrid" BackgroundColor="#fff" Padding="5,0,5,5" RowSpacing=".5" ColumnSpacing=".5">
                <!--Content is dynamically generated by GridService-->
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>