<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnleashedApp.Views.FloorplanView"
             Padding="0">
    <ContentPage Title="Floorplan">
        <ScrollView x:Name="FloorplanScrollView" Padding="10">
            <Grid x:Name="FloorplanGrid" RowSpacing="2" ColumnSpacing="2">
                <!--Content is dynamically generated by GridService-->
            </Grid>
        </ScrollView>
    </ContentPage>
    <ContentPage Title="Legend">
        <ScrollView x:Name="LegendScrollView" Padding="0">
            <Grid x:Name="LegendGrid" RowSpacing="10">
                <!--Content is dynamically generated by LegendGridService-->
            </Grid>
        </ScrollView>
    </ContentPage>
</TabbedPage>